@model Lab.EF.MVC.Models.SuppliersViewModel

@{
    ViewBag.Title = "Suppliers";
}
<div class="container">
    <div class="row">
        <div class="col-sm-5 col-md-6">
            <h1>Insertar Supplier</h1>

            @using (Html.BeginForm("Insert", "Suppliers", FormMethod.Post))
            {
                <label>ID Supplier: </label>
                <br />
                @Html.TextBoxFor(s => s.SupplierID)
                <br />
                <label>CompanyName: </label>
                <br />
                @Html.TextBoxFor(s => s.CompanyName)
                <br />
                <label>ContactName: </label>
                <br />
                @Html.TextBoxFor(s => s.ContactName)
                <br />
                <br />
                <input type="submit" class="btn btn-success" value="Insertar" />

            }
        </div>
        <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0">
            <h1>Modificar Supplier</h1>
            @using (Html.BeginForm("Update", "Suppliers", FormMethod.Post))
            {
                <label>ID Supplier: </label>
                <br />
                @Html.TextBoxFor(s => s.SupplierID)
                <br />
                <label>CompanyName: </label>
                <br />
                @Html.TextBoxFor(s => s.CompanyName)
                <br />
                <label>ContactName: </label>
                <br />
                @Html.TextBoxFor(s => s.ContactName)
                <br />
                <br />
                <input type="submit" class="btn btn-success" value="Guardar" />
            }
        </div>
    </div>
</div>
<br/>
<br/>
    <div>
        @Html.ActionLink("Volver", "Index", "Suppliers")
    </div>
